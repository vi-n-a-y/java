CREATE TABLE user_info(
user_id int PRIMARY KEY,
user_name varchar(50) NOT NULL,
user_pass varchar(20),
user_full_name varchar(50),
user_mail varchar(30) UNIQUE,
user_ph varchar(12) UNIQUE,
user_address varchar(50)
);
